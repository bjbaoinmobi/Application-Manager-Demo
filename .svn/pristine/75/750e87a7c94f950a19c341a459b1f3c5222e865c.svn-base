<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <com.itheima.mobilesafe.ui.SettingItemView
                android:id="@+id/siv_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="设置自动更新已经关闭"
                itheima:desc_on="设置自动更新已经开启"
                itheima:title="设置自动更新" >
            </com.itheima.mobilesafe.ui.SettingItemView>

            <com.itheima.mobilesafe.ui.SettingItemView
                android:id="@+id/siv_show_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="设置号码归属地显示已经关闭"
                itheima:desc_on="设置号码归属地显示已经开启"
                itheima:title="设置号码归属地显示" >
            </com.itheima.mobilesafe.ui.SettingItemView>

            <com.itheima.mobilesafe.ui.SettingClickView
                android:id="@+id/scv_changebg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.itheima.mobilesafe.ui.SettingClickView>

            <com.itheima.mobilesafe.ui.SettingClickView
                android:id="@+id/scv_changeposition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.itheima.mobilesafe.ui.SettingClickView>

            <com.itheima.mobilesafe.ui.SettingItemView
                android:id="@+id/siv_blacknumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="设置拦截黑名单已经关闭"
                itheima:desc_on="设置拦截黑名单已经开启"
                itheima:title="设置拦截黑名单" >
            </com.itheima.mobilesafe.ui.SettingItemView>

            <com.itheima.mobilesafe.ui.SettingItemView
                android:id="@+id/siv_applock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                itheima:desc_off="看门狗已经关闭"
                itheima:desc_on="看门狗已经开启"
                itheima:title="程序锁的设置" >
            </com.itheima.mobilesafe.ui.SettingItemView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>